/*店铺下滚动商品*/
.home_goodlist_box {
  width: 100%;
  padding-top: 20rpx;
}
.home_goodlist_box_content {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.home_goodlist_box_box {
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
}
.home_goodlist_box_img,
.home_goodlist_box_img image {
  width: 110px;
  height: 110px;
  border-radius: 3px;
  position: relative;
  overflow: hidden;
}
.home_goodlist_box_img {
  border: 1px solid #f5f5f5;
  position: relative;
}
.home_goodlist_box_img text{
 position:absolute;
  bottom:0;
  width:96%;
  left:0;
  height:20px;
  padding:0 2%;
  background-color:rgba(0, 0, 0, .58);
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.home_goodlist_box_text {
  display: flex;
  justify-content:space-between;
  align-items:center;
}
.goshop {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 131px;
}

.goshop text:nth-child(1) {
  font-size: 20px;
}
.goshop text:nth-child(2) {
  padding: 0 30rpx 0 10rpx;
}