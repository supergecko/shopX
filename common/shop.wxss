/*首页，频道，闪购，首页搜索的店铺列表*/
.loadingmore {
  height: 50rpx;
  line-height: 50rpx;
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 13px;
  text-align: center;
}

/*筛选盒子*/
.sticky {
  position: sticky;
   top: 0;
  z-index: 2;
}
.goodslist_sort_content {
  display: flex;
  flex-direction: row;
  width: 100%;
  z-index: 999;
  border-bottom: 1px solid #e6e6e6;
}
.goodslist_sort_box {
  width: 25%;
}

.goodslist_sort_title {
  width: 100%;
  height: 78rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  box-sizing: border-box;
}

.goodslist_sort_title:last-child {
  border: none;
}

.goodslist_sort_title image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.goodslist_sort_name {
  font-size: 24rpx;
  color: #333;
}

.noselectcolor {
  font-size: 24rpx;
  color: #333;
}

.selectcolor {
  font-size: 24rpx;
  color: #00cd85;
}

.arrowdown {
  margin: 2rpx 0 0 14rpx;
  width: 0px;
  height: 0px;
  border-left: 8rpx solid transparent;
  border-top: 8rpx solid #000;
  border-right: 8rpx solid transparent;
}

.arrowup {
  margin: 2rpx 0 0 14rpx;
  width: 0px;
  height: 0px;
  border-left: 8rpx solid transparent;
  border-bottom: 8rpx solid #000;
  border-right: 8rpx solid transparent;
}

.goodslist_sort_list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  overflow: hidden;
  width: 100%;
  position: absolute;
  z-index: 999;
  border: 1px solid #d9d9d9;
  left: 0;
}

.sxcontent {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  overflow: hidden;
  width: 100%;
  position: absolute;
  z-index: 999;
  left: 0;
}

.sxtype {
  background-color: #fafafa;
  font-size: 24rpx;
  line-height: 90rpx;
  height: 90rpx;
  display: flex;
  padding-left: 40rpx;
}

.sxsendtype {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
}

.sxsendtype image {
  height: 32rpx;
  width: 32rpx;
  margin-top: 28rpx;
}

.sxsendtype view {
  display: flex;
  flex-direction: row;
  width: 29%;
  padding-left: 30rpx;
  border-bottom: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}

.sxcondition {
  padding-left: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #333;
  font-size: 24rpx;
}

.sxbutton {
  display: flex;
}

.clearsx {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.oversx {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #00cd85;
  color: #fff;
  font-size: 28rpx;
}

.sxbackgroundcolor {
  background-color: rgba(0, 205, 133, 0.16);
}
.goodslist_sort_list text {
  display: block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  box-sizing: border-box;
  padding-left: 40rpx;
}

.goodslist_sort_list text.navaA {
  color: #00cd85;
}

.bestsellcount .navaA {
  color: #00cd85;
}

.smalljuli .navaA {
  color: #00cd85;
}




/*店铺列表页*/
.home_shops_content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.home_shops_title {
  height: 45px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.home_shops_title text:first-child {
  padding: 0 6px;
  font-size: 16px;
  color: #333;
  font-weight: bold;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.home_shops_box {
  padding: 0 2%;
  width: 96%;
  background-color: #fff;
}
.home_shopslist_content {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f0f0f0;
  width: 100%;
}

.home_shopslist_img {
  width: 126rpx;
  height: 126rpx;
  flex-grow: 0;
  flex-shrink: 0;
  border: 1px solid #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.home_shopslist_img image {
  width: 100%;
  height: 100%;
}
.home_shopslist_img text {
  position:absolute;
  top:0;
  left:0;
  background-color:#f0d716;
  color:#fff;
  font-size:12px;
  padding:0 5px;
  border-bottom-right-radius:5px;
}
.home_shopslist_box {
  padding-left: 13px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  width: 78%;
}

.home_shopslist_top {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.home_shopslist_rows {
  display:flex;
  flex-direction:column;
  width:100%;
}
.home_shopslist_row{
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.home_shopslist_name text {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.home_shopslist_star {
  padding-top: 12rpx;
  display: flex;
  flex-direction: row;
}

.home_shopslist_star image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.home_shopslist_star text {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #666;
}

.home_shopslist_time {
  padding-top: 18rpx;
  display: flex;
  flex-direction: row;
}
.home_shopslist_time text {
  height: 22rpx;
  line-height: 20rpx;
  padding: 0 4px;
  font-size: 22rpx;
  color: #666;
}
.home_shopslist_time .first {
  padding-left: 0rpx;
}
.home_shopslist_time .last {
  border-left: 1px solid #d6d6d6;
}
.home_cost_line{
  padding:0 5px;
  font-size:12px;
  color:#d6d6d6;
}
.home_cost_text {
  margin-bottom: 12rpx;
  font-size: 22rpx;
  color: #666;
}

.home_cost_lab {
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
  font-size: 22rpx;
  color: #fff;
  border-radius: 6rpx;
}

.home_ps {
  width: 57px;
  height: 15px;
}

.home_shopslist_bottom {
  flex-grow: 1;
  position: relative;
}

.home_shopslab_btn {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 14rpx;
  right: 10px;
  width: 30px;
  justify-content: center;
  height: 20px;
}

.home_shopslab_btn text {
  font-size: 22rpx;
  color: #666;
}

.home_shopslab_btn i {
  width: 0rpx;
  height: 0rpx;
  margin-left: 12rpx;
  flex-grow: 0;
  flex-shrink: 0;
  display: block;
  border-top: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
}

.btnhide i.icon_down {
  margin-top: 11rpx;
  border-top: 8rpx solid #666;
}

.btnshow i.icon_down {
  border-bottom: 8rpx solid #666;
}

.btnhide .home_shopslab_box {
  height: 46rpx;
}
.btnshow .home_shopslab_box {
  max-height: 160rpx;
}
.home_shopslab_box {
  display: flex;
  overflow: hidden;
  flex-wrap:wrap;
  width: 100%;
}

.home_shopslab {
  width:20%;
  height:46rpx;
  margin:10rpx 10rpx 0 0;
}

.home_shopslab text {
  font-size:22rpx;
  color:#333;
  display:flex;
  background-color:#f5f8f8;
  justify-content:center;
  align-items:center;
  border-radius:4rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.home_order_text {
  margin-top: 10rpx;
  height: 22rpx;
  line-height: 22rpx;
  padding: 5rpx;
  font-size: 24rpx;
  color: #fff;
  background: #34b875;
  border-radius: 4rpx;
  width: 130px;
  text-align: center;
}

.home_closed_text {
  margin-top: 10rpx;
  height: 22rpx;
  line-height: 22rpx;
  padding: 5rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ccc;
  border-radius: 4rpx;
  width: 120px;
  text-align: center;
}
