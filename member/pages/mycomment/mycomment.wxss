.myevaluate_list_content {
  display: flex;
  flex-direction: column;
}

.myevaluate_list_box {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.myevaluate_list_top {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
}

.myevaluate_list_logo,
.myevaluate_list_logo image {
  width: 70rpx;
  height: 70rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 30rpx;
  border-radius: 3px;
}

.myevaluate_list_info_content {
  width: 10px;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
}

.myevaluate_list_info_top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.myevaluate_list_info_top text:nth-child(1) {
  height: 15px;
  line-height: 15px;
  font-size: 15px;
  color: #333;
}

.myevaluate_list_info_top text:nth-child(2) {
  font-size: 10px;
  color: #999;
}

.myevaluate_list_info_bottom,
.myevaluate_list_info_star {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.myevaluate_list_info_bottom {
  padding: 9rpx 0 0;
}

.myevaluate_list_info_star {
  padding-right: 36rpx;
}

.myevaluate_list_info_star text {
  font-size: 12px;
  color: #666;
  margin-right: 10rpx;
}

.myevaluate_list_info_star image {
  width: 20rpx;
  height: 20rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 4rpx;
}

.myevaluate_list_bottom {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 20rpx;
}

.myevaluate_list_text {
  padding: 24rpx 0 0;
}

.myevaluate_list_text text {
  font-size: 15px;
  color: #333;
  word-break: break-all;
  display: block;
}

.myevaluate_list_img {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 14rpx;
}

.myevaluate_list_img image {
  width: 175rpx;
  height: 175rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin: 10rpx 10rpx 0 0;
  border-radius: 6px;
}

.myevaluate_list_reply {
  padding: 16rpx 10rpx;
  margin-top: 30rpx;
  font-size: 0;
  background-color: #f5f5f5;
  border-radius: 3px;
}

.myevaluate_list_reply text {
  font-size: 12px;
  word-break: break-all;
}

.myevaluate_list_reply text:nth-child(1) {
  color: #999;
}

.myevaluate_list_reply text:nth-child(2) {
  color: #666;
}

.myevaluate_list_del {
  padding: 20rpx 0 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.myevaluate_list_del image {
  width: 24rpx;
  height: 22rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 10rpx;
}

.myevaluate_list_del text {
  font-size: 12px;
  color: #666;
}
.emptybox{
  display:flex;
  flex-direction:column;
  width:100%;
  margin-top:10%;
}
.emptybox image{
  width:80px;
  height:80px;
  margin:0 auto;
}
.emptybox text{
  color:#999;
  margin:20px auto;
  font-size:14px;
}
