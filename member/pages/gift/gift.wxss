
.integralcore_head_content{
  height: 290rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.integralcore_head_box{
  width: 222rpx;
  height: 222rpx;
  padding: 6rpx;
  border: 1px solid #ff6e6e;
  border-radius: 50%;
  flex-grow: 0;
  flex-shrink: 0;
}

.integralcore_head{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #fff;
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#fffc70), to(#ff6f6e));
}

.integralcore_head text:first-child{
  font-size: 58rpx;
}

.integralcore_head text:last-child{
  font-size: 30rpx;
}

.integral_detailedtab_content{
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.integral_detailedtab_box{
  width: 50%;
  height: 84rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  color: #333;
}

.integral_detailedtab_box:first-child{
  border-right: 1px solid #e6e6e6;
}

.integral_detailedtab_box:first-child image{
  width: 28rpx;
  height: 30rpx;
}

.integral_detailedtab_box:last-child image{
  width: 30rpx;
  height: 28rpx;
}

.integral_detailedtab_box image{
  margin-right: 10rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.integral_detailedtab_box text{
  font-size: 28rpx;
}

.integral_detailed_content{
  display: flex;
  flex-direction: column;
  margin-bottom: 56px;
}

.integral_detailed_box{
  height: 98rpx;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #fff;
}

.integral_detailed_top,
.integral_detailed_bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.integral_detailed_top text:first-child{
