/* pages/member/member.wxss */
.personal_head_content {
  display: flex;
  width: 100%;
  height: 150px;
  background-color: #00cd85;
  position: relative;
}
.personal_head_box{
  display: flex;
  flex-direction: column;
  width: 94%;
  padding: 0 3%;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
}
.personal_head_user_content {
  	display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    width: 94%;
    padding: 0 3%;
}
.personal_head_user_left {
  	display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.personal_head_user_left image {
  	width: 44px;
    height: 44px;
    flex-grow: 0;
    flex-shrink: 0;
    margin-right: 5px;
    border-radius: 50%;
    border: 1px solid #fff;
}
.personal_head_user_left text {
  	font-size: 18px;
    color: #fff;
    font-weight: 600;
    display: block;
    width: 80%;
    overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  text-align: center;
  margin-top: 5px;
}
.personal_head_user_right{
  width: 10%;
  display: flex;
  justify-content:flex-end;
}
.personal_head_user_right image {
  width: 32rpx;
  height: 32rpx;
  flex-grow: 0;
  flex-shrink: 0;
}
.personal_head_property_content {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50%;
}
.personal_head_property_box {
  width: 33.3333%;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.personal_head_property_box text:nth-child(1) {
  	font-size: 16px;
    color: #fff;
    font-weight: 600;
}
.personal_head_property_box text:nth-child(2) {
  margin-top: 6rpx;
  font-size: 12px;
  color: #fff;
}
.personal_content {
  padding: 0 10px;
}
.personal_box {
  border-radius: 8rpx;
  background-color: #fff;
}
.personal_ad_content,
.personal_ad_content image {
  width: 100%;
  border-radius: 6rpx;
  box-sizing: border-box;
}
.personal_ad_content {
  padding: 10px 10px 0;
}
.personal_ad_content image {
  height: 140rpx;
  display: block;
}
.personal_list_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 10px 0;
}
.personal_list_box {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
}
.w_25{
  width: 25%;
}
.w_33{
  width: 33.333%;
}
.personal_list_box image {
  width: 48rpx;
  height: 48rpx;
}
.personal_list_content.big .personal_list_box image {
  width: 64rpx;
  height: 64rpx;
}
.personal_list_box text {
  margin-top: 14rpx;
  font-size: 12px;
  color: #666;
}
