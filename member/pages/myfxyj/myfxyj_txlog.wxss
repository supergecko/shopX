
.putforward_recordlist_content{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.putforward_recordlist_box{
  padding: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.putforward_recordlist_left{
  display: flex;
  flex-direction: column;
}

.putforward_recordlist_title text{
  font-size: 14px;
  color: #333;
  display: block;
}

.putforward_record{
  margin-top: 4px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.putforward_record text{
  padding: 0 5px;
  font-size: 11px;
  color: #999;
  position: relative;
}

.putforward_record text:first-child{
  padding-left: 0;
}

.putforward_record text:last-child{
  padding-right: 0;
}

.putforward_record text::after{
  content: '';
  width: 1px;
  height: 10px;
  background-color: #e6e6e6;
  position: absolute;
  top: 3px;
  right: 0;
  z-index: 1;
}

.putforward_record text:last-child::after{
  background-color: transparent;
}

.putforward_recordlist_right text{
  font-size: 16px;
  color: #333;
  display: block;
}
.putforward_details_content{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  position:fixed;
  z-index:999;
  bottom:0;
  width:100%;
  height:300px;
}
.txdettitle{
  height:40px;
line-height:40px;
text-align:center;
background-color:#fafafa;
font-size:14px;
}

.putforward_details_box{
  padding: 12px 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
}

.putforward_details_left{
  min-width: 66px;
  flex-grow: 0;
  flex-shrink: 0;
}

.putforward_details_left text{
  font-size: 14px;
  color: #999;
  display: block;
}

.putforward_details_right text{
  font-size: 14px;
  color: #333;
  display: block;
}
