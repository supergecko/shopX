@import "../../../wxParse/wxParse.wxss";
.feedback_content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.feedback_type_content {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.feedback_type_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  position: relative;
}
.feedback_type_box image {
  width: 100%;
  height: 174px;
  flex-grow: 0;
  flex-shrink: 0;
}
.feedback_text_content {
  border-radius:5px;
  display:flex;
  flex-direction:column;
  background-position:center;
  background-repeat:no-repeat;
  background-size:70%;
}
.apply_list_input{
  display:flex;
  align-items:center;
  flex-direction:column;
  margin-top:25px;
  margin-bottom:20px;
}
.apply_list_input button{
  background-color:#DC174F;
  color:#fff;
  font-size:16px;
  width:55%;
}
.shareRuleCon{
  padding:0 10px 0 10px;
}
.shareRule{
  border-radius:7px;
}
.shareimg{
  display:flex;
  align-items:column;
  justify-content:center;
}
.shareimg image{
  width:126px;
  height:17px;
}
.activerule{
  display:flex;
  flex-direction:column;
  padding:0 10px 0 10px;
  margin-top:10px;
}
.activerule text{
  font-size:12px;
  word-break:break-all;
}
.activerule .shareimg{
  width:90px;
  height:77px;
  margin-left:75%;
  margin-bottom: -10px;
}
.wxParse-img{
  width: 100%!important;
}