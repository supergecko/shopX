.feedback_content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.feedback_type_content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.feedback_type_box {
  width: 210rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  position: relative;
}

.feedback_type_box image {
  width: 33rpx;
  height: 30rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 22rpx;
}

.feedback_type_box text {
  font-size: 15px;
  color: #333;
}

.feedback_type_box label {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  z-index: 1;
}

.feedback_textarea_content {
  padding: 20rpx 30rpx;
}

.feedback_textarea_content textarea {
  width: 100%;
  height: 396rpx;
  font-size: 14px;
  color: #333;
}

.feedback_textarea_content.h188 textarea {
  height: 188rpx;
}

.placeholdercolor {
  color: #999;
}

.feedback_title_content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 10rpx;
}

.feedback_title_content text {
  font-size: 14px;
  color: #333;
}

.feedback_submit_content {
  padding: 50rpx 30rpx 0;
}

.feedback_submit_content button {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 15px;
  color: #fff;
}
