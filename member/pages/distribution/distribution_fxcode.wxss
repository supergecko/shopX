@import "/wxParse/wxParse.wxss";
.distribution_qrcode_content {
  width: 100%;
  height: 100%;
  position: relative;
}

.distribution_qrcode_box{
  border-radius: 7px;
  box-shadow: 0px 4px 26px rgba(0,0,0,.2);
  background-color: #fff;
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;
  bottom: 20px;
  z-index: 1;
}

.distribution_qrcode{
  padding: 0 30px;
  background-color:#fff;
  border-radius:6px;
  box-shadow:0px 4px 26px rgba(0,0,0,.2);
}

.distribution_qrcode_head_content,
.distribution_qrcode_head_left,
.distribution_qrcode_head_right{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.distribution_qrcode_head_content{
  padding: 16px 0 6px;
  justify-content: space-between;
}
.distribution_qrcode_head_left{
  width: 100%;
}
.distribution_qrcode_head_left image{
  width: 54px;
  height: 54px;
  margin-right: 12px;
  flex-grow: 0;
  flex-shrink: 0;
  display: block;
  border-radius: 50%;
}

.distribution_qrcode_head_left text{
  font-size: 16px;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:75%;
}

.distribution_qrcode_head_right image{
  width: 16px;
  height: 15px;
  margin-right: 6px;
  flex-grow: 0;
  flex-shrink: 0;
  display: block;
}

.distribution_qrcode_head_right text{
  font-size: 14px;
  display: block;
}

.distribution_qrcode_codeimg{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.distribution_qrcode_codeimg image{
  width: 136px;
  height: 136px;
  display: block;
}

.distribution_qrcode_codeimg text{
  margin-top: 4px;
  font-size: 14px;
  color: #333;
  display: block;
}

.distribution_qrcode_code{
  padding: 6px 0;
  margin-top: 16px;
  text-align: center;
  background-color: #f7f7f7;
}

.distribution_qrcode .line{
  margin: 12px 0;
}

.distribution_qrcode_txt{
  display: flex;
  flex-direction: column;
}


.distribution_qrcode_txt text{
  padding: 3px 0;
  font-size: 12px;
  color: #999;
}
