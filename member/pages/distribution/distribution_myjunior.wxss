.downline_tab_content{
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.downline_tab_box{
  width: 50%;
  flex-grow: 1;
  flex-shrink: 1;
  padding: 10px 0;
  text-align: center;
  font-size: 0;
}

.downline_tab_box text{
  font-size: 14px;
}

.downline_list_content,
.downline_list_box{
  display: flex;
  flex-direction: column;
}

.downline_list_box{
  background-color: #fff;
}

.downline_list_head_content,
.downline_list_bottom_content{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.downline_list_head_content{
  padding: 10px;
}

.downline_list_head_left{
  width: 45px;
  height: 45px;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 10px;
  display: block;
  border-radius: 5px;
  position: relative;
  overflow: hidden;
}

.downline_list_head_left::after{
  content: '';
  width: 15px;
  height: 15px;
  background-image: url("data:image/png;base64,");
  background-size: 100%;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.downline_list_head_left image{
  width: 45px;
  height: 45px;
  display: block;
}

.downline_list_head_right{
  display: flex;
  flex-direction: column;
}

.downline_list_head_right text:nth-child(1){
  font-size: 15px;
  color: #333;
  display: block;
}

.downline_list_head_right text:nth-child(2){
  margin-top: 2px;
  font-size: 11px;
  color: #999;
  display: block;
}

.downline_list_bottom_content{
  border-top: 1px solid #f0f0f0;
  box-sizing: border-box;
}

.downline_list_bottom_box{
  width: 50%;
  flex-grow: 1;
  flex-shrink: 1;
  padding: 8px 0;
  text-align: center;
  border-right: 1px solid #f0f0f0;
  box-sizing: border-box;
}

.downline_list_bottom_box:last-child{
  border-right: none;
}

.downline_list_bottom_box text:nth-child(1){
  font-size: 12px;
  color: #808080;
}

.downline_list_bottom_box text:nth-child(2){
  font-size: 12px;
  color: #333;
}

.downline_list_head_left::after{
  background-image: none;
}
.active{
  color: #00cd85;
}
.downline_list_box.active .downline_list_bottom_box:last-child{
  display: none;
}
