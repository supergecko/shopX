
.balance_head_costlog{
    padding: 8px;
    background: rgba(0,0,0,.25);
    border-radius: 50px 0 0 50px;
    position: absolute;
    top: 35%;
    right: 0;
	  font-size: 12px;
    color: #fff;
    font-family: '微软雅黑';
}
.recharge_head_content {
  height: 340rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-position: center bottom;
  background-repeat: no-repeat;
  background-size: contain;
  background-color:#4BC877;
  position:relative;
}

.recharge_head_content text:nth-child(1) {
  height: 30px;
  line-height: 30px;
  font-size: 30px;
  color: #fff;
}

.recharge_head_content text:nth-child(2) {
  margin-top: 44rpx;
  font-size: 15px;
  color: #fff;
}

.recharge_tabs_content {
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.recharge_tabs_box {
  width: 50%;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.recharge_tabs_box text {
  height: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx;
  font-size: 17px;
  color: #333;
  font-weight: bold;
  border-bottom: 2px solid transparent;
  box-sizing: border-box;
}
.recharge_tabs_box.navaA text{
  border-bottom-color:#4BC877!important;
}
.recharge_content {
  background-color: #fff;
  box-shadow: inset 0 5px 7px 0 rgba(0, 0, 0, .05);
}

.recharge_price_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 30rpx;
}

.recharge_price_box {
  width: 210rpx;
  height: 146rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 30rpx 30rpx 0 0;
  border: 1px solid #e5e5e5;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.recharge_price_box.navaA{
  border: 1px solid #4BC877!important;
}
.recharge_price_box.navaA text{
  color: #4BC877!important;
}
.recharge_price_box text:nth-child(1) {
  height: 17px;
  line-height: 17px;
  font-size: 17px;
  color: #333;
  font-weight: bold;
}
.recharge_price_box text:nth-child(2) {
  margin-top: 18rpx;
  font-size: 14px;
  color: #666;
  word-break: break-all;
}

.recharge_price_input_content {
  padding: 30rpx 30rpx 0;
}

.recharge_price_input_box {
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  border: 1px solid #e5e5e5;
  border-radius: 100px;
}

.recharge_price_input_box text:nth-child(1) {
  margin-right: 20rpx;
  font-size: 15px;
  color: #333;
}

.recharge_price_input_box text:nth-child(3) {
  height: 17px;
  line-height: 17px;
  margin-left: 5rpx;
  font-size: 17px;
  color: #333;
  font-weight: bold;
}

.recharge_price_input_box input {
  flex-grow: 1;
  flex-shrink: 1;
  text-align: right;
  font-size: 12px;
  color: #333;
}

.recharge_updown_content {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.recharge_updown_content image {
  width: 32rpx;
  height: 25rpx;
}

.recharge_tips_content {
  min-height: 88rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx 30rpx;
  border-top: 1px solid #f0f0f0;
  box-sizing: border-box;
}

.recharge_tips_content text:nth-child(1) {
  flex-grow: 0;
  flex-shrink: 0;
  font-size: 15px;
  color: #999;
}

.recharge_tips_content text:nth-child(2) {
  flex-grow: 1;
  flex-shrink: 1;
  font-size: 15px;
  color: #333;
  word-break: break-all;
}

.recharge_button_content {
  height: 98rpx;
}

.recharge_button_box {
  width: 100%;
  height: 98rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  border-top: 1px solid #f0f0f0;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.recharge_button_box button {
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 14px;
  color: #fff;
  background-color:#4BC877;
}
.balance_rechargecar_content{
  display: flex;
  flex-direction: column;
}
.balance_rechargecar_box{
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}
.balance_rechargecar_box text{
  font-size: 26rpx;
  color: #333;
}
.balance_rechargecar_input{
  margin-top: 4rpx;
  flex-grow: 1;
}
.balance_rechargecar_box input{
  height: 80rpx;
  font-size: 26rpx;
  color: #333;
}
.costlogcontent{
  display:flex;
  flex-direction:column;
  width:100%;
  position:fixed;
  z-index:999999;
  background-color:#fff;
  bottom:0;
}
.costlogbox{
  display:flex;
  background-color:#fff;
  padding:10px;
}
.costlogbox_left{
  display:flex;
  flex-direction:column;
  width: 50%;
}
.costlogbox_left .costleftname{
  color:#333;
  font-size:28rpx;
}
.costlogbox_left .costleftdate{
  color:#666;
  font-size:26rpx;
  margin-top: 20rpx
}
.costlogbox_right{
  display:flex;
  width:50%;
}
.costlogbox_right .jiancost{
  color:#ccc;
  font-size:28rpx;
  text-align:right;
  width:100%;
}
.costlogbox_right .addcost{
  color:#00cd85;
  font-size:28rpx;
  text-align:right;
  width:100%;
}
.costlogtitle{
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  background-color:#fafafa;
}