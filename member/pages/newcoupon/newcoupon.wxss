
.addto_address_content{
  display: flex;
  flex-direction: column;  
  margin:0 10px;
}

.addto_address_box{
  height: 88rpx;  
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top:10px;
}

.addto_address_box text{
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.addto_address{
  flex-grow: 1;
  position: relative;
  border: 1px solid #cccccc;
  border-radius: 5px;
  padding: 0 5px;
  background-color:#fff; 
}

.addto_address input{
  font-size: 27rpx;
  color: #333;
  height:44px;
  line-height:44px;
}

.addto_address_search{
  display:flex;
flex-direction:column;

}

.search-form{
  width:100%;
  background-color:#fff;
}

.search-form .addto_address input{
  margin-top:8rpx;
  font-size:27rpx;
  color:#333;
  float:left;
  width:80%;
  padding:0 0 0 10rpx;
}

.search-form button{  
  background:#00cd85;
  color:#fff;
  width:120rpx;
  height:50rpx;
  font-size:14px;
  text-align:center;
  line-height:50rpx;
  margin:10rpx 0 10rpx 0;
}

.choice-address{
  background-color:#fff;
  height:88rpx;
  padding:10rpx 20rpx;
  flex-direction:row;
  border-bottom: 1px solid #ddd;
}

.choice-address text{
  display: block;
  overflow:hidden;
  max-height:24px;
}