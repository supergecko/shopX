.feedback_content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.feedback_type_content {
  /* display: flex; */
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 2px solid #00CD85;
}

.feedback_type_box {
  /* width: 210rpx; */
  height: 2rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  position: relative;
  margin-top:10px;
}
.feedback_type_zi{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-top:20px;
}
.feedback_type_zi text{
  font-size:13px;
}
.feedback_type_zi text:nth-child(1){
  background-color:#00CD85;
  color:#fff;
  width:60px;
  height:20px;
  line-height:20px;
  text-align:center;
  border-radius:3px;
}
.feedback_type_zi text:nth-child(2){
  margin-right:21%;
  margin-left:21%;
}

.feedback_type_box image {
  width: 615rpx;
  height: 40rpx;
  flex-grow: 0;
  flex-shrink: 0;
  /* margin-left: 12px; */
}

.feedback_type_box text {
  font-size: 15px;
  color: #333;
}

.feedback_textarea_content {
  padding: 20rpx 20rpx;
}
.feedback_text_content {
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-radius:5px;
  display:flex;
  flex-direction:column;
  margin-bottom:10px;
}
.feedback_text_content text{
  font-size:12px;
}
.feedback_text_content text:nth-child(2){
  margin-top:10px;
  margin-bottom:10px;
}
.apply_list_input{
  display:flex;
  align-items:center;
}
.apply_list_input text{
  font-size:13px;
}
.apply_list_input input{
  font-size:13px;
}
.picker{
  font-size:13px;
}
.apply_list_input button{
  height:24px;
  font-size:12px;
  line-height: 24px;
  background-color: #f2f2f2;
}
.feedback_title_content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 10rpx;
}

.feedback_title_content text {
  font-size: 14px;
  color: #333;
}

.feedback_submit_content {
  padding:20rpx 20rpx 10px;
  background-color:#fff;
}

.feedback_submit_content button {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  color: #fff;
}
