.integralgoodslist_banner_content,
.integralgoodslist_banner_content image{
  width: 100%;
  height: 232rpx;
}

.integralgoodslist_userinfo_content{
  padding: 14rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.integralgoodslist_userinfo_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.integralgoodslist_userinfo_left text:first-child{
  margin-right: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.integralgoodslist_userinfo_left text:last-child{
 font-size: 28rpx;
 color: #fa4c0f;
}

.integralgoodslist_userinfo_btn{
  width: 134rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
}

.integral_goodslist_content{
  padding: 0 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.integral_goodslist_box{
  width: 304rpx;
  margin: 20rpx 10rpx 0;
  padding: 20rpx;
  background-color: #fff;
}

.integral_goodslist_img{
  height: 220rpx;
  overflow: hidden;
}

.integral_goodslist_img image{
  width: 100%;
  height: 220rpx;
}

.integral_goodslist_name{
  width: 100%;
  height: 66rpx;
  line-height: 34rpx;
  padding: 14rpx 0;
  overflow: hidden;
}

.integral_goodslist_name text{
  text-align: justify;
  font-size: 27rpx;
  color: #333;
}

.integral_goodslist_bottom{
  padding-top: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.integral_goodslist_integral{
  font-size: 28rpx;
  color: #fa4c0f;
}

.integral_goodslist_btn{
  width: 134rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 8rpx;
  background-color: #00cd85;
}

.integral_goodslist_btn.active{
  background-color: #ccc;
}
.emptygift{
  margin-top:100px;
  text-align:center;
}






