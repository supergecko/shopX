  color:#000;
}
.orderlist_bottom{
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
  background-color: #fff;
  bottom:0;
position:fixed;
z-index: 9;
}

.orderlist_bottom button{
  width: 146rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin: 0  20rpx;
  padding: 0;
  background-color: #fff;
}
.orderlist_bottom .first{
  color: #fff;
  border: none;
  background-color:#00cd85;
}
