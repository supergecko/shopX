.orderdetails_content{
  width: 100%;
}

.orderdetails_box{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.orderdetails_title{
  height: 84rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.orderdetails_title image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 12rpx;
}

.orderdetails_title text{
  font-size: 28rpx;
  color: #000000;
}

.orderdetails_list_box,
.orderdetails_info_box{
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
}

.orderdetails_list_l{
  width: 80px;
  flex-grow: 1;
  font-size: 28rpx;
}

.orderdetails_list_c,
.orderdetails_list_r{
  width: 142rpx;
