
.orderstate_class_content{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.orderstate_class{
  height: 88rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.orderstate_class text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.orderstate_class text:last-child{
  border-left: 1px solid #e6e6e6;
}

.orderstate_class.navaA{
  border-bottom-width: 4rpx;
  border-bottom-style: solid;
}

.orderstate_content{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.orderstate_line{
  width: 2px;
  height: 100%;
  position: absolute;
  top: 88rpx;
  left: 62rpx;
  background-color: #ccc;
}

.orderstate_mark{
  width: 124rpx;
  height: 16rpx;
  background-color: #f5f5f5;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.orderstate_box{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.orderstate_left{
  width: 124rpx;
  padding-top: 16rpx;
  flex-grow: 0;
  flex-shrink: 0;
  position: relative;
  z-index: 2;
}

.orderstate_img{
  width: 62rpx;
  height: 62rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  border: 8rpx solid #f5f5f5;
  overflow: hidden;
}

.orderstate_img image{
  width: 70rpx;
  height: 70rpx;
  flex-grow: 0;
  flex-shrink: 0;
}

.orderstate_right{
  width: 80rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  flex-grow: 1;
  background-color: #fff;
}

.orderstate_map{
  margin-top: 20rpx;
}

.orderstate_map,
.orderstate_map map{
  width: 100%;
  /*height: 130rpx;*/
}

.orderstate_title{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.orderstate_title text:first-child{
  font-size: 28rpx;
  color: #000000;
}

.orderstate_title text:last-child{
  font-size: 24rpx;
  color: #999999;
}

.orderstate_text{
  padding-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}

.orderstate_text text{
  color: #368ed9;
}

