
.addto_address_content{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.addto_address_box{
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addto_address_box text{
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.addto_address{
  display: flex;
  height: 100%;
  align-items: center;
}
.addto_address text{
  font-weight: bold;
}
.addto_address input{
  margin-top: 8rpx;
  font-size: 27rpx;
  color: #333;
}

.addto_address_search{
  display:flex;
flex-direction:column;

}

.search-form{
  width:100%;
  background-color:#fff;
}

.search-form .addto_address input{
  margin-top:8rpx;
  font-size:27rpx;
  color:#333;
  float:left;
  width:80%;
  padding:0 0 0 10rpx;
}

.search-form button{  
  background:#00cd85;
  color:#fff;
  width:120rpx;
  height:50rpx;
  font-size:14px;
  text-align:center;
  line-height:50rpx;
  margin:10rpx 0 10rpx 0;
}

.choice-address{
  background-color:#fff;
  height:88rpx;
  padding:10rpx 20rpx;
  flex-direction:row;
  border-bottom: 1px solid #ddd;
}

.choice-address text{
  display: block;
  overflow:hidden;
  max-height:24px;
}
.tagbox{
  display: flex;
  border: 1px solid #f5f5f5;
  color: #666;
  margin-right: 30px;
  height: 20px;
  font-size: 13px;
  padding: 0 10px;
}
.tagbox.borderstyle{
  border:1px solid #00cd85!important;
}