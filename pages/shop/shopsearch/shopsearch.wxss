
.ordeing_content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.ordeing_box{
  display: flex;
  margin-bottom:50px;
  padding:0 3%;
  width:94%;
  flex-wrap:wrap;
  background-color: #fff;
}
.ordeing_market_content{
  display: flex;
  flex-direction:column;
  width:50%;
  align-items:center;
  justify-content:center;
  margin-bottom:20rpx;
}

.ordeing_list_content :last-child.ordeing_market_content{
  padding-bottom: 128rpx;
}

.ordeing_market_list{
  width: 96%;
  height: 100%;
  position: relative;
  padding:0 2%;
}
.ordeing_market_img {
  position: relative;
}

.ordeing_market_img,
.ordeing_market_img image{
  width: 100%;
  height: 198rpx;
}

.ordeing_market_name{
  width: 100%;
  padding-top: 8rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.ordeing_market_name text{
  font-size:28rpx;
  color:#333;
  font-weight:bold;
}

.ordeing_market_sale text{
  font-size: 24rpx;
  color: #999999;
}

.ordeing_market_price{
  padding-top: 20rpx;
}

.ordeing_market_price text:nth-child(1){
  font-size: 22rpx;
  color: #ff0000;
}

.ordeing_market_price text:nth-child(2){
  font-size: 30rpx;
  color: #ff0000;
}

.ordeing_market_price text:nth-child(3){
  font-size: 22rpx;
  color: #999999;
}

.ordeing_market{
  width: 96%;
  position: absolute;
  left: 0;
  bottom: 1px;
  z-index: 1;
}

.ordeing_market_input{
  height: 58rpx;
  position: relative;
}

.ordeing_market_input input{
  height: 56rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 56rpx;
  background-color: #f5f5f5;
  border: 1px solid #e6e6e6;
}

.ordeing_market_input .inp_add,
.ordeing_market_input .inp_minus{
  width: 56rpx;
  height: 56rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  border: 1px solid #b3b3b3;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 0;
  z-index: 9;
}

.ordeing_market_input .inp_add{
  left: 0;
}

.ordeing_market_input .inp_minus{
  right: 0;
  line-height:56rpx;
}

.ordeing_market_spec,
.ordeing_market_over{
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 20rpx;
  font-size: 22rpx;
  float: right;
  border-width: 1px;
  border-style: solid;
  border-radius: 46rpx;
}

.ordeing_market_over{
  color: #ccc;
  border-color: #f0f0f0;
}

.order_head_content {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    z-index: 9;
    width: 100%;
    position:relative;
}

.zhekou_nameclass{
 bottom:0px;
width:100%;
color:#fff;
position:absolute;
font-size:12px!important;
height:18px;
line-height:18px;
z-index:9;
display:flex;
background-size:contain;
}
.zhekou_nameclass image{
  width:14px;
height:14px;
margin:2px 5px 0;
}
.zhekou_nameclass text:last-child{
margin-left:5px;
}
.linethrough{
  text-decoration:line-through;
  float: right;
}

.maskbg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 9999;
    display: block;
}


.hide{
  display:none;
}
.head_search_box{
  display:flex;
  width:94%;
  align-items:center;
  padding:5px 3% 20px;
  background-color:#00cd85;
}
.head_search_box .box_left{
  display:flex;
  height:32px;
  align-items:center;
  background-color:#fff;
  border-radius:20px;
  width:80%;
}
.head_search_box .box_left image{
  height:28rpx;
  width:28rpx;
  margin-left:10px;
}
.head_search_box .box_left input{
  font-size:12px;
  width:88%;
}
.head_search_box .box_right{
  width:20%;
  text-align:center;
  color: #fff;
}
.emptybox{
  background-color:#fff;
  height:50px;
  line-height:50px;
  font-size:13px;
  color:#a9a9a9;
  text-align:center;
}