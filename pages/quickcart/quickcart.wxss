}

.home_order_text{
  margin-top:10rpx;
  height:22rpx;
  line-height:22rpx;
  padding:5rpx;
  font-size:24rpx;
  color:#ffffff;
  background:#34b875;
  border-radius:4rpx;
  width:130px; 
  text-align:center;
}
.home_closed_text{
  margin-top:10rpx;
  height:22rpx;
  line-height:22rpx;
  padding:5rpx;
  font-size:24rpx;
  color:#ffffff;
  background:#cccccc;
  border-radius:4rpx;
  width:120px;
text-align:center;
}
.emptyshoplist{
  display:flex;
  flex-direction:column;
  margin-top:40px;
  width:100%;
  text-align:center;
}
.emptyshoplist image{
  width:120px;
  height:120px;
  margin-left:33%;
}
.emptyshoplist text{
  height:50px;
  line-height:50px;
  font-size:14px;
  color:#666;

}