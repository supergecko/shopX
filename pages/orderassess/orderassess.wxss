.evaluateorder_head_content {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f6f6f6;
}

.evaluateorder_head_left,
.evaluateorder_head_left image {
  width: 90rpx;
  height: 90rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.evaluateorder_head_right {
  width: 10px;
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
}

.evaluateorder_head_name {
  height: 17px;
  line-height: 17px;
  font-size: 17px;
  color: #333;
}

.evaluateorder_head_label {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 4rpx 0 0;
}

.evaluateorder_head_label text {
  padding: 5rpx 10rpx;
  margin: 10rpx 10rpx 0 0;
  font-size: 12px;
  color: #52575b;
  border: 1px solid #dad8d8;
  border-radius: 2px;
}

.evaluateorder_content {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.evaluateorder_textarea {
  padding: 30rpx 30rpx 10rpx;
}

.evaluateorder_textarea textarea {
  width: 100%;
  height: 156rpx;
  font-size: 14px;
  color: #333;
}

.evaluateorder_upload_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 30rpx;
}

.evaluateorder_upload_btn,
.evaluateorder_upload_btn image,
.evaluateorder_upload_img,
.evaluateorder_upload_img image {
  width: 155rpx;
  height: 155rpx;
  margin: 20rpx 20rpx 0 0;
  position: relative;
}

.evaluateorder_upload_img,
.evaluateorder_upload_img image {
  border-radius: 3px;
}

.evaluateorder_upload_img text {
  width: 30rpx;
  height: 30rpx;
  line-height: 26rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  font-size: 12px;
  color: #fff;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 6rpx;
  right: -10rpx;
  z-index: 1;
}

.evaluateorder_star_content {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 52px;
}

.evaluateorder_star_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 18rpx 30rpx;
}

.evaluateorder_star_box text {
  margin-right: 30rpx;
  font-size: 15px;
  color: #666;
}

.evaluateorder_star_box image {
  width: 34rpx;
  height: 34rpx;
  flex-grow: 0;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.evaluateorder_btn_content {
  border-top: 1px solid #f6f6f6;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  bottom: 0;
}

.evaluateorder_btn_content button {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 15px;
  background-color: #fff;
  border-radius: 0;
}

.evaluateorder_btn_content button::after {
  border: none;
}
