
.orderlist_content{
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.orderlist_top{
  height:88rpx;
padding:0 2%;
display:flex;
flex-direction:row;
align-items:center;
justify-content:space-between;
line-height:88rpx;
}
.orderlist_left{
  width:74%;
overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
}
.orderlist_left text:first-child{
  color:#000;
font-size:30rpx;
font-weight:bold;
}
.orderlist_left text:last-child{
  border-left: 1px solid #d8d8d8;
 padding-left: 8px;
  font-size: 13px;
   margin-left: 8px;
}
.orderlist_state text{
  font-size: 24rpx;
}

.orderlist_center{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.center_box{
  display:flex;
padding:0 20rpx;
line-height:52rpx;
}
.center_box .box_left{
  font-size:28rpx;
color:#666;
}
.center_box .box_right{
  font-size:28rpx;
color:#000;
margin-left:20rpx;
}

.orderlist_bottom{
  padding: 6rpx 2%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.orderlist_bottom button{
  width: 146rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin: 0 0 0 20rpx;
  padding: 0;
  background-color:#fff;
}
.orderlist_bottom .first{
  color: #fff;
  border: none;
  background-color:#00cd85;
}
.drawpop_up{
  position:absolute;
background-color:#fff;
border-radius:10rpx;
width:80%;
top:30%;
left: 10%;
height:122px;
z-index:9999;
}
.draw_title{
  width:100%;
text-align:center;
line-height:80rpx;
font-weight:bold;
font-size:32rpx;
color:#666;
}
.draw_content{
  font-size:28rpx;
color:#666;
text-align:center;
border-bottom:1px solid #f0f0f0;
line-height:80rpx;
}
.draw_button{
  width:100%;
display:flex;
line-height:80rpx;
}
.draw_button text:first-child{
  width:49%;
color:#666;
font-size:28rpx;
text-align:center;
border-right:1px solid #f0f0f0;
}
.draw_button text:last-child{
  width:49%;
color:#00cd85;
font-size:28rpx;
text-align:center;
}





















